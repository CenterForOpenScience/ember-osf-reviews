<div class="container">
    <div class="row">
        <div local-class="notification-list" class="col-md-8">
            <div local-class="notification-list-heading-container">
                <h4 local-class="notification-list-heading">{{t 'components.notificationList.heading'}}</h4>
                <div local-class="helper-text">
                    {{t 'components.notificationList.helperText'}}
                    <a href={{serviceLinks.settingsNotifications}}>
                        {{t 'components.notificationList.userSettings'~}}
                    </a>.
                </div>
            </div>

            <div local-class="line-separator"></div>
            {{#if fetchData.isRunning}}
                {{#content-placeholders as |placeholder|}}
                    <div local-class="notification-title--skeleton">
                        {{placeholder.text lines=1}}
                    </div>
                    <div local-class="line-separator"></div>
                {{/content-placeholders}}
            {{else}}
                <div local-class="notification-list-body">
                    {{#each subscriptions as |subscription|}}
                        {{notification-list-row subscription=subscription}}
                        <div local-class="line-separator"></div>
                    {{/each}}
                </div>
            {{/if}}
        </div>
    </div>
</div>
