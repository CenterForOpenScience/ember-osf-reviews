<div local-class="dark-header">
    <div class="container">
        <div local-class="flex-container" class="text-left">
            {{reviews-breadcrumbs}}
            <h1 local-class="provider-title">{{providerName}}</h1>
            <div>
                <ul class="nav nav-pills" local-class="title-nav">
                    {{#each tabs as |tab|}}
                        {{#link-to tab.route tagName='li' href=false}}
                            {{#link-to tab.route provider.id}}
                                {{t tab.nameKey}}
                                {{#if tab.hasCount}}
                                    <small class="unread-label">{{tab.count}}</small>
                                {{/if}}
                            {{/link-to}}
                        {{/link-to}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>
</div>
