{{#if fetchData.isRunning}}
    {{loading-indicator-page}}
{{else}}
    {{#if showDashboard}}
        <div class='reviews-dashboard content'>
            <div class='reviews-dashboard-header'>
                <div class='container'>
                    <div class='row'>
                        <div class='text-center m-t-xl col-xs-12'>
                            <h1>{{t 'dashboard.title'}}</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class='container'>
                <div class='row'>
                    <div class='col-md-4 col-md-push-8'>
                        {{dashboard-sidebar providers=sidebarProviders}}
                    </div>
                    <div class='col-md-8 col-md-pull-4'>
                        {{action-feed
                            toDetail=(action 'transitionToDetail')
                        }}
                    </div>
                </div>
            </div>
        </div>
        {{contact-bar feedback=showDashboard}}
    {{else if providersToSetup}}
        <div class="reviews-header">
            <div class="container">
                <div class="row">
                    <div class="text-center m-t-lg col-xs-12">
                        <div class="m-b-lg reviews-brand"></div>
                        {{#if showSetup}}
                            {{start-moderating action=(action 'setupProvider') providers=providersToSetup}}
                        {{/if}}
                    </div>
                </div>
            </div>
        </div>
    {{else if (not currentUser.user.canViewReviews)}}
        {{error-page error='forbidden'}}
    {{else}}
        {{error-page error='not-setup'}}
    {{/if}}
{{/if}}
