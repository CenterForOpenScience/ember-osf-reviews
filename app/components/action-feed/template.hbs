{{#if (and loadActions.isRunning (not loadingMore))}}
    {{#each dummyActionList}}
        {{action-feed-entry-skeleton}}
    {{/each}}
{{else}}
    {{#each actionsList key='id' as |action|}}
        {{action-feed-entry action=action toDetail=toDetail}}
    {{else}}
        <div class="text-center">{{t 'components.action-feed.no_actions'}}</div>
    {{/each}}
    {{#if loadingMore}}
        {{#each dummyActionList}}
            {{action-feed-entry-skeleton}}
        {{/each}}
    {{else if (and moreActions (not loadActions.isRunning))}}
        <div class='see-more'>
            <a role='button' {{action nextPage}}>{{t 'components.action-feed.see_more'}}</a>
        </div>
    {{/if}}
{{/if}}
