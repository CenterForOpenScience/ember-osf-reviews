<div class="dark-header"> {{!HEADER}}
    <div class="container"> {{!CONTAINER}}
        <div class="row">{{!HEADER ROW}}
            <div class="text-left p-l-lg col-md-12">
                <p>
                    {{#each breadCrumbs as |breadCrumb|}}
                        {{#if (eq breadCrumb.name 'provider')}}
                            <b>{{provider-title}}</b>
                        {{else}}
                            {{#link-to breadCrumb.path}}
                                {{capitalize breadCrumb.name}}
                            {{/link-to}}
                        {{/if}}
                        {{#unless (eq breadCrumb breadCrumbs.lastObject)}}
                            <img class="separator">
                        {{/unless}}
                    {{/each}}
                </p>
                {{!TITLE}}
                <h1 class="provider-title"><b>{{provider-title}}</b></h1>
                <div id="tabTitle">
                    <ul class="nav nav-pills">
                        {{#each tabs as |tab|}}
                            {{#link-to tab.route tagName='li' href=false class=(if (eq active tab.name) 'active')}}
                                {{#link-to tab.route provider-id}}
                                    {{tab.name}}
                                    {{#if (eq tab.name 'Moderation')}}
                                        <small class="unread-label">{{unread-count}}</small>
                                    {{/if}}
                                {{/link-to}}
                            {{/link-to}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div> {{!END HEADER}}
