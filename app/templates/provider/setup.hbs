<div class="moderation-setup">
    <header>
        <div class="container">
            <div class="row">
                <div class="text-center col-xs-12">
                    <h1>{{t "setup.choose_settings" provider=model.name}}</h1>
                </div>
            </div>
        </div>
    </header>

    <div class="text-bigger alert alert-warning text-center">
        <i class="fa fa-exclamation-triangle" aria-hidden="true"></i>
        {{t "setup.once_finalized"}}
    </div>

    <div class="container">
        <div class="row m-t-lg">
            <form class="col-md-offset-2 col-md-8 col-sm-offset-1 col-sm-10">
                {{#each settingsOptions as |option|}}
                    {{#form-block title=(t (concat "setup.settings." option.name ".title")) description=(t (concat "setup.settings." option.name ".description")) disabled=option.disabled}}
                        {{#each option.options as |choice|}}
                            {{form-block-radiobutton
                            title=(t (concat "setup.settings." option.name ".options." choice ".title"))
                            description=(t (concat "setup.settings." option.name ".options." choice ".description") provider=model.name)
                            name=option.name
                            value=choice
                            attribute=(mut (get this option.name))
                            }}
                        {{/each}}
                    {{/form-block}}
                {{/each}}
            </form>
        </div>

        <br>

        <div class="row">
            <div class="col-xs-offset-2 col-xs-8">
                <div class="btn-toolbar pull-right">
                    <button class="btn btn-default" {{action "cancel"}}>{{t "global.cancel"}}</button>
                    <button class="btn btn-success" {{action "submit"}}>{{t "setup.finalize"}}</button>
                </div>
            </div>
        </div>
    </div>
</div>

